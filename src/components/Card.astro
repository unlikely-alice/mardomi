---
export interface Props {
  title: string;
  body: string;
  href: string;
  night?: boolean;
}

const { href, title, body, night } = Astro.props;
---

<li class:list={["link-card", night ? "night" : "day"]}>
  <a href={href}>
    <h2>
      {title}
      <span>&larr;</span>
    </h2>
    <p>
      {body}
    </p>
  </a>
</li>

<style>
  .day {
    --bg-color: white;
    --fg-color1: #111;
    --fg-color2: #444;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--flag-red)),
      rgb(var(--flag-gold)) 20%,
      rgb(var(--flag-green)) 40%,
      white 60%
    );
  }

  .night {
    --bg-color: black;
    --fg-color1: #eee;
    --fg-color2: #aaa;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--flag-red)),
      rgb(var(--flag-gold)) 20%,
      rgb(var(--flag-green)) 40%,
      black 60%
    );
  }

  .link-card {
    list-style: none;
    display: flex;
    padding: 0.25rem;
    background-color: var(--bg-color);
    background-image: none;
    background-size: 400%;
    border-radius: 0.6rem;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -2px rgba(0, 0, 0, 0.1);
  }

  .link-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: 1rem 1.3rem;
    border-radius: 0.35rem;
    color: var(--fg-color1);
    background-color: var(--bg-color);
    opacity: 0.8;
  }

  h2 {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 500;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }

  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
    color: var(--fg-color2);
  }

  .link-card:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-gradient);
  }

  .link-card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent));
  }
</style>
